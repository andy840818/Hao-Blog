<article class="flex justify-between ">
  <ul>
    <% @articles.each do |article| %>
      <li class="">
        <%= link_to article_path(article) do %>
          <section class="mb-5 p-10 w-[800px] bg-[#f1f1f1] shadow rounded-md border-y-[#e9e9e9] border-8 border-[#f5f5f5] hover:bg-[#f4f4f4] ">
            <%= tag.h2 article.title, class:'text-lg'%>
            <div>
              <%= truncate(strip_tags(article.content), length: 50) %>
            </div>
          </section>
        <% end %>
      </li>
    <% end %>
  </ul>
  <section class="w-1/5 h-[900px] border border-black ">
    <div class="w-[200px] h-[200px] border border-black mx-auto my-8 box-content">
      
    </div>
  </section>
</article>

